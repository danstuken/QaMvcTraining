@model IEnumerable<QAForum.Models.Forum.Thread>

<p>
    @Html.ActionLink("Create New", "Create", "Thread")
</p>
<table>
    <tr>
        <th>
            ForumId
        </th>
        <th>
            ThreadTitle
        </th>
        <th>
            OwnerId
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ForumId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThreadTitle)
        </td>
        <td>
            @{ Html.RenderAction("PartialUserDetails", "User", new { id = item.OwnerId }); }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Thread", new { id=item.ThreadId }, null) |
            @Html.ActionLink("Details", "Details", "Thread", new { id=item.ThreadId }, null) |
            @Html.ActionLink("Delete", "Delete", "Thread", new { id=item.ThreadId }, null)
        </td>
    </tr>
}

</table>
