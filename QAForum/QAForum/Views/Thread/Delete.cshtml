@model QAForum.Models.ViewModels.ThreadViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Thread</legend>

    <div class="display-label">ForumID</div>
    <div class="display-field">@Model.ForumId</div>

    <div class="display-label">ThreadTitle</div>
    <div class="display-field">@Model.ThreadTitle</div>

    <div class="display-label">OwnerID</div>
    <div class="display-field">@Model.OwnerId</div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.HiddenFor(m => m.ThreadId)
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


