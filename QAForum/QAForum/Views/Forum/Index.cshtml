@model IEnumerable<QAForum.Models.Forum.Forum>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.HeaderMessage</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ForumTitle)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ForumId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ForumId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ForumId })
        </td>
    </tr>
}

</table>
