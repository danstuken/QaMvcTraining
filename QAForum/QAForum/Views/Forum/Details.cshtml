@using QAForum.Models.ViewModels
@model QAForum.Models.ViewModels.ForumViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@ViewBag.HeaderMessage</h2>

<fieldset>
    <legend>Forum</legend>

    <div class="display-label">ForumTitle</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ForumTitle)
    </div>
    <h3>Threads</h3>
    @Html.Partial("~/Views/Thread/PartialThreadList.cshtml", (List<ThreadViewModel>)(ViewBag.Threads))
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ForumId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
