@model QAForum.Models.Forum.Post

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Post</legend>

    <div class="display-label">UserID</div>
    <div class="display-field">@Model.UserId</div>

    <div class="display-label">ThreadID</div>
    <div class="display-field">@Model.ThreadId</div>

    <div class="display-label">PostTitle</div>
    <div class="display-field">@Model.PostTitle</div>

    <div class="display-label">PostDateTime</div>
    <div class="display-field">@String.Format("{0:g}", Model.PostDateTime)</div>

    <div class="display-label">PostBody</div>
    <div class="display-field">@Model.PostBody</div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.HiddenFor(m => m.PostId)
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


