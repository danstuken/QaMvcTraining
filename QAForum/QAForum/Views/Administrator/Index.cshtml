@model IEnumerable<QAForum.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Message</h2>

<table>
    <tr>
        <th>
            UserName
        </th>
        <th>
            AvatarPath
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            <img src="@item.AvatarPath" alt="member's avatar"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserId }) |
        </td>
    </tr>
}

</table>
